<!--- ////////////////////////////////////////////////////-->
<!-- PAYMENT-->
<h2>Paiement</h2>

  <form action="/payment" methode="post" class="payment_form">
    <fieldset>
      <!--name CB-->
      <label for="cardname" class="payment_label"
        >Nom du titulaire de la carte</label
      >
      <input
        id="cardname"
        type="text"
        name="cardname"
        class="payment_input"
        required
        pattern="[A-Z\s]+"
        title="Nom et Prénom en majuscules uniquement"
        minlength="3"
      />

      <!--nbr CB-->
      <label for="cardnbr" class="payment_label">Numéro de la carte</label>
      <input
        id="cardnbr"
        type="text"
        name="cardnbr"
        class="payment_input"
        required
      />

      <!--date CB-->
      <label for="cardexpiration" class="payment_label"
        >Date d'expiration</label
      >
      <select
        id="cardexpirationMM"
        name="cardexpirationMM"
        class="payment_input"
        aria-label="mois"
        required
      >
        <option value="" selected disabled>--Mois--</option>
        <option value="01">janvier</option>
        <option value="02">février</option>
        <option value="03">mars</option>
        <option value="04">avril</option>
        <option value="05">mai</option>
        <option value="06">juin</option>
        <option value="07">juillet</option>
        <option value="08">août</option>
        <option value="09">septembre</option>
        <option value="10">octobre</option>
        <option value="11">novembre</option>
        <option value="12">décembre</option>
      </select>
      <select
        id="cardexpirationYY"
        name="cardexpirationYY"
        class="payment_input"
        aria-label="année"
        required
      >
        <option value="" selected disabled>--Année--</option>
        <option value="25">2025</option>
        <option value="26">2026</option>
        <option value="27">2027</option>
        <option value="28">2028</option>
        <option value="29">2029</option>
        <option value="30">2030</option>
        <option value="31">2031</option>
        <option value="32">2032</option>
        <option value="33">2033</option>
        <option value="34">2034</option>
        <option value="35">2035</option>
      </select>
      <!--Pour express : -->
      <input
        type="hidden"
        class="cbExpiration"
        name="cbExpiration"
        id="cbExpiration"
        maxlength="4"
      />

      <!--cvv CB -->
      <label for="cardsecurity" class="payment_label">CVV</label>
      <input
        id="cardsecurity"
        type="text"
        class="payment_input"
        required
        pattern="[0-9]{3}"
        title="3 chiffres requis"
      />
    </fieldset>

